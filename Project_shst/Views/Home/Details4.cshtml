@model ELShoppingCart2

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<form method="post" id="AddCart">


    <script>
        $(document).ready(function () {
            $("#AddCart").submit(function (event) {
                event.preventDefault();

                var formData = $("#AddCart").serialize();

                $.ajax({
                    type: "POST",
                    url: "/Home/Details4",
                    data: formData,
                    success: function (data) {
                        if (data.success)
                            toastr.success('Product enter in your Shoppingcart !');
                        else
                            toastr.error('Une erreur s est produite');

                    }
                });
            });
        });
    </script>
    <input hidden asp-for="ELProductsId" />



    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.ELProducts.Goods</h1>
                <h1 class="text-white-50">@Model.ELProducts.Brand.Name</h1>
            </div>


        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <div><b>Price12: </b>@Model.ELProducts.Price.ToString("c")</div>
                        </div>

                        <div class="row pl-2">
                            <div><b>Price: </b>@Model.ELProducts.Price12.ToString("c")</div>

                        </div>

                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"><input asp-for="Count" class="form-control" /></div>

                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">

                        <img src="@Model.ELProducts.Imagurl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;" asp-action="IndexShop">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>


</form>

